@model FinalProject_MVC.Models.Appointments

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Appointment Information</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Date and Time
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt>
            Sender
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt>
            Property Address
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Apartment.Property.Address)
        </dd>
        <dt>
            Apartment Number
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Apartment.ApartmentNumber)
        </dd>
        <dt>
            Manager
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Apartment.Manager.FirstName) @Html.DisplayFor(model => model.Apartment.Manager.LastName)
        </dd>
        <dt>
            Confirmation
        </dt>
        <dd>
            @if (Model.Confirmation == false)
            {
                <span>Not yet</span>
            }
            else
            {
                <span>Confirmed</span>
            }
        </dd>
    </dl>
</div>
<p>
    @if ((int)@Session["CurrentCategoryId"] == 6 || (int)@Session["CurrentCategoryId"] == 7)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.AppointmentId })
    }
    @Html.ActionLink("Back to List", "Index")
</p>
