@model FinalProject_MVC.Models.Contracts

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="login_card sign_up">
    <h4>Add a contract</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.InitialDate, "Initial Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" id="InitialDate" name="InitialDate" class="form-control" />
            @Html.ValidationMessageFor(model => model.InitialDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FinalDate, "Final Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" id="FinalDate" name="FinalDate" class="form-control" />
            @Html.ValidationMessageFor(model => model.FinalDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Apartment.ApartmentValue, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Apartment.ApartmentValue, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Apartment.ApartmentValue, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TenantId, "Tenant", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("TenantId", null, "-- Select Tenant --", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenantId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Apartment.ApartmentId, "Apartment", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ApartmentId", null, "-- Select Property --", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Apartment.ApartmentId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Payday, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="number" id="Payday" name="Payday" class="form-control" min="1" max="31" />
            @Html.ValidationMessageFor(model => model.Payday, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <hr />
    <div>
        <p class="button-access-profile" style="margin: 10px;">@Html.ActionLink("Back to List", "Index")</p>
</div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
